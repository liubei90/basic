.activity-list_header {
  height: 80rpx;
  position: relative;
  font-size: 16px;
  font-weight: 600;
}
.activity-list_more {
  position: absolute;
  right: 30rpx;
  top: 30rpx;
  font-size: 12px;
}

.activity-list {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: stretch;
  background-color: #fff;
}

.activity-list_more {
  position: absolute;
}

.activity-list_item {
  padding: 30rpx 30rpx;
  box-sizing: border-box;
  width: 100%;
}

.activity-list_top_hr {
  margin: 0 30rpx;
  border-top: 1px solid gray;
}

.edge-container {
  display: flex;
  justify-content: center;
  align-items: center;
}

.edge-icon {
  width: 100rpx;
  height: 100rpx;
}
